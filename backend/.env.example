# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/solquest
MONGODB_URI_PROD=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/solquest

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=7d

# Solana Configuration
SOLANA_NETWORK=devnet
ADMIN_WALLET_PUBLIC_KEY=your_admin_wallet_public_key

# CORS Configuration
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_PROD=https://solquest-app.windsurf.build
